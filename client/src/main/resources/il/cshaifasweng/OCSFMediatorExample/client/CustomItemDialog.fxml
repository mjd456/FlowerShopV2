<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="12" style="-fx-background-color: #202228; -fx-padding: 20;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.CustomItemDialogController">
    <Label style="-fx-font-size: 18; -fx-text-fill: #B0B9FF; -fx-font-weight: bold;" text="Create Your Custom Flower Item" />

    <HBox alignment="CENTER_LEFT" spacing="3">
        <Label style="-fx-text-fill: red;" text="*" />
        <Label style="-fx-text-fill: white;" text="Type of item:" />
    </HBox>
    <TextField fx:id="ItemTypeField" promptText="e.g., bridal bouquet" style="-fx-background-radius: 6; -fx-background-color: #2b2f3a; -fx-text-fill: white;" />

    <HBox alignment="CENTER_LEFT" spacing="3">
        <Label style="-fx-text-fill: red;" text="*" />
        <Label style="-fx-text-fill: white;" text="Desired price range:" />
    </HBox>
    <TextField fx:id="PriceRangeField" promptText="e.g., 100-200" style="-fx-background-radius: 6; -fx-background-color: #2b2f3a; -fx-text-fill: white;" />

    <Label style="-fx-text-fill: white;" text="Dominant color (optional)" />
    <TextField fx:id="ColorField" promptText="e.g., white" style="-fx-background-radius: 6; -fx-background-color: #2b2f3a; -fx-text-fill: white;" />

    <Button onAction="#handleConfirm" style="-fx-background-color: #4D8DFF; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;" text="Confirm" />
</VBox>
